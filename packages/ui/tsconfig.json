{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"jsx": "react",
		"lib": ["es2020", "dom", "dom.iterable"],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "es2017",
		"paths": {
			"@/*": ["./src-gen/*"]
		},
		"noUncheckedIndexedAccess": true
	},
	"include": ["src-gen", ".scripts/**/*", "eslint.config.js", ".prettierrc.cjs"]
}
