{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"format": {
			"inputs": ["src", "package.json", "tsconfig*json", ".prettierrc.cjs"]
		},
		"lint": {
			"dependsOn": ["^build"],
			"inputs": ["src", "package.json", "tsconfig*json", ".eslintrc.cjs"]
		},
		"lint:fix": {
			"dependsOn": ["^build"],
			"inputs": ["src", "package.json", "tsconfig*json", ".eslintrc.cjs"]
		},
		"test": {
			"dependsOn": ["^build"]
		},
		"build": {
			"dependsOn": ["^build"],
			"inputs": [
				"src",
				"package.json",
				"tsconfig*json",
				".scripts",
				"postcss.config.js",
				"vite.config.ts",
				"tailwind.config.cjs",
				"index.html"
			],
			"outputs": ["dist", "src-gen"]
		},
		"deploy": {
			"dependsOn": ["build"]
		}
	}
}
